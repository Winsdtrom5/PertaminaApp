<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.TambahDinasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- CardView for the form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:backgroundTint="#D3D3D3"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true">
            <!-- Content of the form goes here -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Form fields -->
                <!-- Header TextView -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Permintaan Dinas"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nama"
                            android:elevation="2dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <EditText
                                android:id="@+id/namaText"
                                android:layout_width="match_parent"
                                android:background="#E5E4E2"
                                android:layout_height="match_parent"
                                android:textSize="15dp"
                                android:hint="Pilih Asal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/asal"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:elevation="2dp"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <AutoCompleteTextView
                                    android:id="@+id/acasal"
                                    android:layout_width="match_parent"
                                    android:background="#E5E4E2"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:hint="Pilih Asal" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tujuan"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:elevation="2dp"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <AutoCompleteTextView
                                    android:id="@+id/actujuan"
                                    android:layout_width="match_parent"
                                    android:background="#E5E4E2"
                                    android:textSize="15dp"
                                    android:layout_height="match_parent"
                                    android:hint="Pilih Tujuan" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/TITanggalberangkat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                app:endIconMode="custom"
                                app:endIconDrawable="@drawable/baseline_calendar_month_24"
                                android:hint="Tanggal Berangkat">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:enabled="false"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/TITanggalpulang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                app:endIconMode="custom"
                                app:endIconDrawable="@drawable/baseline_calendar_month_24"
                                android:hint="Tanggal Pulang">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:enabled="false"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="15dp"
                                android:hint="Keterangan">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textMultiLine"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="2dp"
                                app:cardCornerRadius="8dp"
                                app:cardUseCompatPadding="true"
                                android:backgroundTint="#E5E4E2"
                                android:layout_marginTop="15dp">
                                <!-- Function description -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Upload Bukti Dinas"
                                        android:textSize="18sp"
                                        android:layout_gravity="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Accepted file types: pdf" />

                                    <!-- File upload content -->
                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">
                                        <!-- Button to trigger file upload -->
                                        <Button
                                            android:id="@+id/uploadfile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Upload"
                                            android:gravity="center" />

                                        <TextView
                                            android:layout_marginStart="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="File: " />

                                        <TextView
                                            android:id="@+id/selectedFileName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="No file selected"
                                            android:maxLines="1" />

                                        <Button
                                            android:id="@+id/changeFile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Change"
                                            android:visibility="gone" />

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <Button
                                android:id="@+id/submitButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="100dp"
                                android:layout_marginEnd="100dp"
                                android:gravity="center"
                                android:enabled="false"
                                android:text="Submit" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                <!-- Submit button -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:gravity="center"
                    android:text="Submit" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
