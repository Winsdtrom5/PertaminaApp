<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    tools:context=".LaporanActivity"
    tools:openDrawer="end">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#e6e9ed"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/baseline_menu_24">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_header"
                android:layout_marginStart="100dp"/>
            <ImageView
                android:id="@+id/notification"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:src="@drawable/baseline_notifications_24" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="70dp"
            android:visibility="gone"
            android:layout_marginBottom="70dp">
            <!-- This FrameLayout will hold the fragments -->
        </FrameLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#D3D3D3"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/status"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:elevation="2dp"
                                android:layout_margin="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <AutoCompleteTextView
                                    android:id="@+id/acstatus"
                                    android:layout_width="match_parent"
                                    android:background="#E5E4E2"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:hint="Pilih Status" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/bulan"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:elevation="2dp"
                                android:layout_margin="15dp"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <AutoCompleteTextView
                                    android:id="@+id/acbulan"
                                    android:layout_width="match_parent"
                                    android:background="#E5E4E2"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:hint="Pilih Bulan" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tahun"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:elevation="2dp"
                                android:layout_margin="15dp"
                                android:enabled="false"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <AutoCompleteTextView
                                    android:id="@+id/actahun"
                                    android:layout_width="match_parent"
                                    android:background="#E5E4E2"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:hint="Pilih Tahun" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <Button
                                android:id="@+id/button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Generate"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="100dp"
                                android:layout_marginEnd="100dp"
                                android:enabled="false"
                                android:drawableLeft="@drawable/baseline_search_24"
                                android:background="@color/blue" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/graph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#D3D3D3"
                        app:cardCornerRadius="10dp">
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_loading"
        android:visibility="gone"/>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        android:background="@color/white"
        app:menu="@menu/sidebar_pekerja">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/logo_header"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="680dp"/>
        <!--        android:layout_marginTop="660dp"-->
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>