<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:background="@drawable/bg1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#D3D3D3"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:padding="15dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_person_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namaAkun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NULL"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>


                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D3D3D3"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="JobDesk"
                        android:textSize="15sp"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pekerjaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="30dp"
                        android:text="NULL"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#D3D3D3"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="user Information"
                        android:textSize="15sp"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Kode Pekerja"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/kode_pekerja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Name"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Gender"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Umur"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/umur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Tanggal Lahir"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tgl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Masa Kerja"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/masa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="NULL"
                                android:textColor="#6E6C6C"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Klasifikasi"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/klasifikasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Jurusan"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/jurusan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Fungsi"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/fungsi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="PJP"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pjp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Pola Kerja"
                                android:textSize="15sp"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pola"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6C6C"
                                android:text="NULL"
                                android:textSize="15sp"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:backgroundTint="#D3D3D3"
            android:layout_margin="15dp"
            android:layout_marginBottom="20dp"
            android:text="Change Password"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>
    </LinearLayout>
    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_loading"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>